/**
 * This generator creates Zod schemas from your Prisma models using npx prisma generate
 */
generator client {
  provider = "prisma-client-js"
}

/**
 * This generator creates Zod schemas from your Prisma models using npx prisma generate zod
 */
// generator zod {
