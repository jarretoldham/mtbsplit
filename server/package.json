{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "generate": "npx prisma generate",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "npm run test:integration:setup && (DATABASE_URL=\"postgresql://test_user:test_password@localhost:5433/test_db\" vitest run --config vitest.integration.config.ts; npm run test:integration:teardown)",
    "test:integration:watch": "npm run test:integration:setup && DATABASE_URL=\"postgresql://test_user:test_password@localhost:5433/test_db\" vitest --config vitest.integration.config.ts",
    "test:integration:setup": "cd .. && docker compose -p mtbsplit-test -f docker-compose.test.yml up -d || echo 'Database already running'",
    "test:integration:teardown": "cd .. && docker compose -p mtbsplit-test -f docker-compose.test.yml down",
    "migrate": "docker compose exec server npx prisma migrate dev --name",
    "migrate:deploy": "docker compose exec server npx prisma migrate deploy"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^6.10.1",
    "bcrypt": "^6.0.0",
    "bluebird": "^3.7.2",
    "fastify": "^5.4.0",
    "prisma": "^6.10.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bluebird": "^3.5.42",
    "@types/node": "^24.2.1",
    "@types/request": "^2.48.13",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  }
}
